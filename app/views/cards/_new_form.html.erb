<%= form_with model: [@project, list, Card.new],
              class: "space-y-2",
              data: { turbo_frame: "new_card_#{list.id}" } do |form| %>

  <%= form.text_field :title,
                      placeholder: "Adicionar um cartão...",
                      class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>

  <div class="hidden" id="card_form_<%= list.id %>">
    <%= form.text_area :description,
                       placeholder: "Descrição (opcional)",
                       rows: 3,
                       class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>

    <div class="flex space-x-2">
      <%= form.submit "Adicionar Cartão",
                      class: "bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded-md text-sm transition-colors" %>
      <button type="button"
              class="px-3 py-1 text-gray-600 hover:text-gray-800 text-sm"
              data-action="click->card#cancel">
        Cancelar
      </button>
    </div>
  </div>
<% end %>
