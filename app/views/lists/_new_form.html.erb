<div class="bg-gray-50 rounded-lg p-4 border-2 border-dashed border-gray-300" id="new_list_form">
  <%= form_with model: [@project, @new_list],
                class: "space-y-4",
                data: { turbo_frame: "new_list_form" } do |form| %>

    <div>
      <%= form.text_field :title,
                          placeholder: "Nome da lista",
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex space-x-2">
      <%= form.submit "Adicionar Lista",
                      class: "flex-1 bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md transition-colors" %>
      <button type="button"
              class="px-4 py-2 text-gray-600 hover:text-gray-800"
              data-action="click->list#cancel">
        Cancelar
      </button>
    </div>

    <% if @new_list.errors.any? %>
      <div class="text-red-600 text-sm">
        <% @new_list.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
