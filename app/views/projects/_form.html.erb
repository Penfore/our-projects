<%= form_with model: project, local: true, class: "space-y-6" do |form| %>
  <% if project.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="text-red-400">
          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(project.errors.count, "erro", "erros") %> impediu que o projeto fosse salvo:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside">
              <% project.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "Nome do Projeto", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "Ex: Website da Empresa" %>
  </div>

  <div>
    <%= form.label :description, "Descrição", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "Descreva o objetivo do projeto..." %>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancelar", project.persisted? ? project : projects_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-700 px-6 py-2 rounded-lg" %>
    <%= form.submit project.persisted? ? "Atualizar Projeto" : "Criar Projeto", class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg" %>
  </div>
<% end %>
